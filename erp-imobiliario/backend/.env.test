# Configurações para ambiente de teste
NODE_ENV=test
PORT=3001

# Banco de dados (cada cliente terá sua própria instância)
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/legasys_test"

# JWT Secret (específico para teste)
JWT_SECRET="test_jwt_secret_key_super_secure_change_in_production_2024"
JWT_EXPIRES_IN="24h"

# Evolution API (configuração base)
EVOLUTION_API_URL="http://localhost:8080"
EVOLUTION_API_KEY="test_api_key"
EVOLUTION_WEBHOOK_URL="http://localhost:3001/api/webhooks/whatsapp"

# Configurações de email (para testes)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="test_user"
SMTP_PASS="test_pass"
FROM_EMAIL="noreply@legasys-test.com"
FROM_NAME="LegaSys ERP - Teste"

# Upload de arquivos
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Redis para cache e sessões (opcional para teste)
REDIS_URL="redis://localhost:6379"

# Configurações de segurança
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=900000 # 15 minutos

# Rate limiting
RATE_LIMIT_WINDOW=60000 # 1 minuto
RATE_LIMIT_MAX=100 # 100 requests por minuto

# Logs
LOG_LEVEL="debug"
LOG_FILE="./logs/legasys-test.log"

# Features flags
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true
ENABLE_EMAIL_VERIFICATION=false # Desabilitado para testes
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_LEAD_DISTRIBUTION=true

# URLs para diferentes clientes (multi-tenant)
CLIENT_1_SUBDOMAIN="cliente1"
CLIENT_1_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/legasys_cliente1"

CLIENT_2_SUBDOMAIN="cliente2"
CLIENT_2_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/legasys_cliente2"

CLIENT_3_SUBDOMAIN="cliente3"
CLIENT_3_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/legasys_cliente3"

CLIENT_4_SUBDOMAIN="cliente4"
CLIENT_4_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/legasys_cliente4"

# Configuração para planos
PLANO_TESTE_LIMITE_USUARIOS=3
PLANO_TESTE_LIMITE_LEADS=100
PLANO_BASICO_LIMITE_USUARIOS=5
PLANO_BASICO_LIMITE_LEADS=1000
PLANO_PROFISSIONAL_LIMITE_USUARIOS=25
PLANO_PROFISSIONAL_LIMITE_LEADS=5000
PLANO_EMPRESARIAL_LIMITE_USUARIOS=100
PLANO_EMPRESARIAL_LIMITE_LEADS=-1 # Ilimitado